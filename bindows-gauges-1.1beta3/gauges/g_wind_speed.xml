

<Gauge2 coordWidth="1000" coordHeight="1000" left="0" top="0" bottom="0" right="0">


    <!-- Background -->
    <Gauge2CircularBorder width="980" height="980" centerX="500" centerY="500" strokeWidth="2" stroke="#333333">
        <Gauge2CircularBorder.Filler>
            <Gauge2RingGradientFiller  color1="#EEEEEE" color2="#BBBBBB" thickness="5" highlightCenter="100"/>
        </Gauge2CircularBorder.Filler>
    </Gauge2CircularBorder>


    <!-- Labels -->
    <Gauge2Label text="Wind Speed" font="60" foreColor="#000000" x="500" y="620"/>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="-135" endAngle="135">

        <!-- Scale -->
        <Gauge2RadialScale radius="430" startValue="0" endValue="140">
            <Gauge2RadialScaleSection sectionWidth="30" color="#CCDDFF" stroke="gray" strokeWidth="3" radius="360" startValue="0" endValue="140"/>
            <Gauge2RadialScaleSection sectionWidth="66" color="#AAFF99" stroke="gray" strokeWidth="3" radius="300" startValue="0" endValue="20"/>
            <Gauge2RadialScaleSection sectionWidth="66" color="#FFAA99" stroke="gray" strokeWidth="3" radius="300" startValue="80" endValue="140"/>
        </Gauge2RadialScale>

        <!-- Ticks -->
        <Gauge2RadialTicks tickWidth="1" tickLength="28" color="gray" tickCount="29" radius="360"/>
        <Gauge2RadialTicks tickWidth="8" tickLength="28" color="black" tickCount="8" radius="360"/>

    </Gauge2RadialRange>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="-135" endAngle="135">
        <Gauge2RadialScale font="45" foreColor="#000000" radius="420" startValue="0" endValue="140" labelCount="8"/>

        <Gauge2RadialScale startValue="0" endValue="360">

            <!-- Needle -->
            <Gauge2RadialNeedle id="needle" value="35" stroke="#BB2222" strokeWidth="1"
                                innerRadius="0" innerWidth="50"
                                outerRadius="360" outerWidth="5">
                <Gauge2RadialNeedle.Filler>
                    <Gauge2RadialGradientFiller color1="#CC1111" color2="#FF6666"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>

        </Gauge2RadialScale>


        <!-- Cap -->
        <Gauge2BasicCap width="100" height="100">
            <Gauge2BasicCap.Filler>
                   <Gauge2RingGradientFiller color1="#888888" color2="#DDDDDD" thickness="20" highlightCenter="0"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>

        <Gauge2BasicCap width="70" height="70">
            <Gauge2BasicCap.Filler>
                   <Gauge2LinearGradientFiller color1="#666666" color2="#DDDDDD" angle="45"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>

    </Gauge2RadialRange>

</Gauge2>

