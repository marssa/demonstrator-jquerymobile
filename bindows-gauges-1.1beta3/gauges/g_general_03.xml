<Gauge2 coordWidth="1000" coordHeight="1000" left="0" top="0" bottom="0" right="0">
    <!-- Background -->
    <Gauge2CircularBorder width="980" height="980" centerX="500" centerY="500" strokeWidth="2" stroke="#333333">
        <Gauge2CircularBorder.Filler>
            <Gauge2RingGradientFiller  color1="#666666" color2="#222222" thickness="5" highlightCenter="100"/>
        </Gauge2CircularBorder.Filler>
    </Gauge2CircularBorder>

    <!-- Label background -->
    <Gauge2RectangularBorder centerX="500" centerY="750" width="200" height="100" stroke="#C0C0C0" strokeWidth="5" arcSize="30">
        <Gauge2RectangularBorder.Filler>
            <Gauge2LinearGradientFiller color1="#444444" color2="#222222" angle="0"/>
        </Gauge2RectangularBorder.Filler>
    </Gauge2RectangularBorder>

    <!-- Label -->
    <Gauge2Label id="label" text="30" font="65 Arial Black" foreColor="#EEEEC0" x="500" y="748" anchorHorizontal="center" anchorVertical="center"/>

    <!-- Range -->
    <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="-135" endAngle="135">

        <!-- Scale -->
        <Gauge2RadialScale radius="350" startValue="0" endValue="100">
            <!-- Scale Selection -->
            <Gauge2RadialScaleSection sectionWidth="20" color="808080" radius="300" startValue="0" endValue="100"/>
        </Gauge2RadialScale>

        <!-- Ticks -->
        <Gauge2RadialTicks tickWidth="5" tickLength="30" color="#FFFFFF" tickCount="11" radius="300"/>
        <Gauge2RadialTicks tickWidth="2" tickLength="20" color="#FFFFFF" tickCount="21" radius="300"/>

        <!-- Scale -->
        <Gauge2RadialScale font="60 Arial Black" foreColor="#C0C0C0" radius="365" startValue="0" endValue="100" labelCount="11">
            <!-- Needle -->
            <Gauge2RadialNeedle id="needle" value="30" stroke="#000000" strokeWidth="1"
                                innerRadius="0" innerWidth="30"
                                outerRadius="320" outerWidth="5">
                <Gauge2RadialNeedle.Filler>
                    <Gauge2RadialGradientFiller color1="#666666" color2="#111111"/>
                </Gauge2RadialNeedle.Filler>
            </Gauge2RadialNeedle>
        </Gauge2RadialScale>

        <!-- Cap -->
        <Gauge2BasicCap width="100" height="100">
            <Gauge2BasicCap.Filler>
                   <Gauge2RingGradientFiller color1="#464646" color2="#A8A8A8" thickness="20" highlightCenter="0"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>

        <Gauge2BasicCap width="70" height="70">
            <Gauge2BasicCap.Filler>
                   <Gauge2LinearGradientFiller color1="#666666" color2="#A8A8A8" angle="45"/>
            </Gauge2BasicCap.Filler>
        </Gauge2BasicCap>

    </Gauge2RadialRange>

</Gauge2>